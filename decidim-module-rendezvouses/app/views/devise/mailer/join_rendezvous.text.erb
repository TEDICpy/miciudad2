<%= t("devise.mailer.invitation_instructions.hello", email: @resource.name) %>

<%= t("decidim.rendezvouses.invite_join_rendezvous_mailer.invite.invited_you_to_join_a_rendezvous", invited_by: @resource.invited_by.name, application: @resource.organization.name) %>

<% accept_invitation_url(@resource, invitation_token: @token, invite_redirect: Decidim::EngineRouter.main_proxy(@opts[:rendezvous].feature).rendezvous_registration_path(rendezvous_id: @opts[:rendezvous], participatory_space_id: @opts[:rendezvous].feature.participatory_space), host: @resource.organization.host) %>

<% if @resource.invitation_due_at %>
<%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :long)) %>
<% end %>

<%= t("devise.mailer.invitation_instructions.ignore").html_safe %>
