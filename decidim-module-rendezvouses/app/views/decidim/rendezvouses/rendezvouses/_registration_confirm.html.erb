<div class="reveal" data-reveal id="rendezvous-registration-confirm">
  <div class="row">
    <div class="columns medium-10 medium-offset-1 help-text">
      <%= decidim_sanitize translated_attribute(rendezvous.registration_terms) %>
    </div>
  </div>
  <div class="row">
    <div class="columns medium-8 medium-offset-2">
      <%= button_to t('.confirm'), rendezvous_registration_path(rendezvous), class: "button expanded", data: { disable: true } %>
    </div>
  </div>
  <div class="text-center">
    <button class="link" data-close><%= t('.cancel') %></button>
  </div>
</div>
